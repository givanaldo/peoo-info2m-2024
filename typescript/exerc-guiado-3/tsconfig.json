{
  "compilerOptions": {
    "target": "es2016",   
    //"module": "commonjs",
    "module": "esnext",
    "rootDir": "./src",   
    "outDir": "./dist",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,    
    "skipLibCheck": true,

    "moduleResolution": "node" // Resolve m√≥dulos como o Node.js
  },
  "include": ["src"],
  "exclude": ["node_modules"]   
}
